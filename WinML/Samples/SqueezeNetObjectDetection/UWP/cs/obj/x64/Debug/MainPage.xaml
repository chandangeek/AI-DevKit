<Page
    x:Class="SqueezeNetObjectDetection.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SqueezeNetObjectDetection"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel>
            <ComboBox x:ConnectionId='2' Name="Combo_DeviceKind" 
                      HorizontalAlignment="Left" 
                      VerticalAlignment="Top"
                      Width="200"
                      Height="40"
                      SelectedIndex="0"
                      >
                <ComboBoxItem x:ConnectionId='8' Name="Default" Content="Default"/>
                <ComboBoxItem x:ConnectionId='9' Name="Cpu" Content="Cpu"/>
                <ComboBoxItem x:ConnectionId='10' Name="DirectX" Content="DirectX"/>
                <ComboBoxItem x:ConnectionId='11' Name="DirectXHighPerformance" Content="DirectXHighPerformance"/>
                <ComboBoxItem x:ConnectionId='12' Name="DirectXMinPower" Content="DirectXMinPower"/>
            </ComboBox>
            <Button x:ConnectionId='3' Name="ButtonLoad"
                    ToolTipService.ToolTip="Load the model"
                    Width="100"
                    Height="40"
                                             
                    IsEnabled="True" 
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Top">
                <Button.Content>
                    Load model
                </Button.Content>
            </Button>
            <Button x:ConnectionId='4' Name="ButtonRun"
                    ToolTipService.ToolTip="Pick and evaluate and image"
                    Width="100"
                    Height="40"
                                            
                    IsEnabled="False" 
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Top">
                <Button.Content>
                    Pick image
                </Button.Content>
            </Button>
            <Button x:ConnectionId='5' Name="ButtonReset"
                    ToolTipService.ToolTip="Unload the model"
                    Width="100"
                    Height="40"
                                              
                    IsEnabled="False" 
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Top">
                <Button.Content>
                    Reset
                </Button.Content>
            </Button>

            <!--Result and status text block-->
            <TextBlock x:ConnectionId='6' x:Name="StatusBlock" 
                       FontWeight="Bold" 
                       TextWrapping="Wrap"  
                       Text="Load the model first (SqueezeNet!)"/>

            <!--Image preview -->
            <Image x:ConnectionId='7' Name="UIPreviewImage" Stretch="Uniform" MaxWidth="300" MaxHeight="300"/>
        </StackPanel>

    </Grid>
</Page>

